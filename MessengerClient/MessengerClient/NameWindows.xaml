<Window x:Name="Messenger" x:Class="MessengerClient.NameWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerClient"
        mc:Ignorable="d"
        Title="NameWindows" Height="142" Width="299"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-1">
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="40" Margin="10,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" RenderTransformOrigin="0.5,0.625"/>
        <Label x:Name="label" Content="      Введите ваше имя!" HorizontalAlignment="Left" Height="35" Margin="50,15,0,0" VerticalAlignment="Top" Width="195" FontSize="14.667"/>
        <Button x:Name="button" Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="60" Margin="215,55,0,0" RenderTransformOrigin="0.067,0.5" Height="40" Click="button_Click" IsDefault="True"/>

    </Grid>
</Window>