<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <system.serviceModel>
    <services>
      <service name="MessengerServer.MessengerServerService" behaviorConfiguration="mexBehavior">
        <endpoint address="MessengerServer" binding="netTcpBinding" contract="MessengerServer.IMessengerServerService" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8080"/>
            <add baseAddress="net.tcp://localhost:8081"/>
          </baseAddresses>
        </host>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="mexBehavior">
          <serviceMetadata httpGetEnabled="true"/>
        
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>

  <connectionStrings>
    <add name="LocalDatabase" providerName="MySql.Data.MySqlClient" connectionString="server=localhost;user id=root;password=1234;database=messages;allowuservariables=True;persistsecurityinfo=True" />
  </connectionStrings>
</configuration>